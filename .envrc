# vim: ft=bash

[[ -f ${BASHMATIC_HOME}/.bash_safe_source ]] && source ${BASHMATIC_HOME}/.bash_safe_source

((BASHMATIC_DEBUG + DEBUG + BASHMATIC_DEBUG + BASHMATIC_PATH_DEBUG)) && {
  src ${BASHMATIC_HOME}/.envrc.debug
}

((BASHMATIC_DEBUG + DEBUG + BASHMATIC_DEBUG + BASHMATIC_PATH_DEBUG)) || {
  src ${BASHMATIC_HOME}/.envrc.no-debug
}  

source init.sh

PATH_add examples
PATH_add bin
PATH_add .bats-prefix/libexec
PATH_add .bats-prefix/bin

test -f .envrc.local && source ".envrc.local"


