\pset pager
\pset linestyle unicode
\pset border 3
\pset columns 0
\pset format aligned
\pset null ''
\pset tuples_only
\timing
\set QUIET 0
\echo  '❯❯❯ —————————————————————————————————————————————————————————————————'
\echo  '❯❯❯ NOTE: TERMINAL WIDTH OF AT LEAST 200 IS REQUIRED FOR SOME OUTPUTS.'
\echo  '❯❯❯ —————————————————————————————————————————————————————————————————'
